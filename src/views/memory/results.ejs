<%- include('../partials/header.ejs', { title: t('calculators.memory_results.title') }) %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h2 class="mb-0"><i class="bi bi-calculator"></i> <%= t('calculators.memory_results.title') %></h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h4><%= t('calculators.memory_results.vm_specifications') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.memory_results.number_of_vms') %>:</strong></td>
                  <td><%= results.numVMs %></td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.average_ram_per_vm') %>:</strong></td>
                  <td><%= results.avgRAMPerVM %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.memory_overhead_per_vm') %>:</strong></td>
                  <td><%= results.memoryOverheadPerVM %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.memory_reservation') %>:</strong></td>
                  <td><%= results.memoryReservationGB %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.memory_limit') %>:</strong></td>
                  <td><%= results.memoryLimitGB %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.memory_ballooning') %>:</strong></td>
                  <td><%= results.memoryBalloonPercent %>%</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.swap_recommendation') %>:</strong></td>
                  <td><%= results.swapRecommendation %></td>
                </tr>
              </table>
            </div>
            
            <div class="col-md-6">
              <h4><%= t('calculators.memory_results.resource_requirements') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.memory_results.total_ram_for_vms') %>:</strong></td>
                  <td><%= results.totalRAMForVMs %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.total_memory_overhead') %>:</strong></td>
                  <td><%= results.totalMemoryOverhead %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.total_memory_needed') %>:</strong></td>
                  <td><%= results.totalMemoryNeeded %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.total_memory_reservation') %>:</strong></td>
                  <td><%= results.totalMemoryReservation %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.total_memory_limit') %>:</strong></td>
                  <td><%= results.totalMemoryLimit %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.memory_recovered_by_ballooning') %>:</strong></td>
                  <td><%= results.memoryRecoveredByBallooning %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.effective_memory_after_ballooning') %>:</strong></td>
                  <td><%= results.effectiveMemoryAfterBallooning %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.memory_results.host_memory_recommendation') %>:</strong></td>
                  <td><%= results.hostMemoryRecommendation.toFixed(2) %> GB</td>
                </tr>
              </table>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-12">
              <h4><%= t('calculators.memory_results.recommendations') %></h4>
              <ul class="list-group">
                <% results.recommendations.forEach(rec => { %>
                  <li class="list-group-item"><%= rec %></li>
                <% }); %>
              </ul>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-12">
              <a href="/memory" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> <%= t('calculators.memory_results.new_calculation') %>
              </a>
              <a href="/calculators" class="btn btn-secondary">
                <i class="bi bi-calculator"></i> <%= t('calculators.title') %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>