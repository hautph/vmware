<%- include('../partials/header.ejs', { title: 'System Documentation - Search Results' }) %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <!-- Enhanced Search Results Header -->
            <div class="search-results-header text-center mb-4">
                <h1><i class="bi bi-search"></i> Documentation Search Results</h1>
                <p class="lead">Found <%= results.length %> articles matching "<%= query %>"</p>
            </div>
            
            <div class="mb-4 text-center">
                <a href="/documentation" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Documentation
                </a>
            </div>
            
            <% if (results.length === 0) { %>
                <div class="alert alert-warning text-center" role="alert">
                    <h4><i class="bi bi-exclamation-triangle"></i> No Results Found</h4>
                    <p>No documentation articles matched your search query. Try different keywords.</p>
                </div>
            <% } else { %>
                <div class="row">
                    <% results.forEach(article => { %>
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card h-100 documentation-search-result-card">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%- article.title %></h5>
                                    <h6 class="card-subtitle mb-2 text-muted"><%- article.category %></h6>
                                    <div class="card-text flex-grow-1"><%- article.excerpt %></div>
                                    <a href="/documentation/article/<%= article.id %>" class="btn btn-primary mt-auto">
                                        <i class="bi bi-file-earmark-text"></i> Read Document
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.documentation-search-result-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.documentation-search-result-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

.search-results-header h1 {
    font-weight: 700;
    color: #2c3e50;
}
</style>

<%- include('../partials/footer.ejs') %>