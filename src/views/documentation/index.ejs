<%- include('../partials/header') %>

<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">System Documentation</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <h1 class="display-4">System Documentation</h1>
      <p class="lead">Research documentation, system analysis, and change logs for our infrastructure.</p>
    </div>
  </div>

  <% if (articles && articles.length > 0) { %>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0 h5">Documentation Articles</h2>
            <span class="badge bg-light text-dark"><%= articles.length %> articles</span>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% articles.forEach(function(article) { %>
                <a href="/documentation/article/<%= article.id %>" class="list-group-item list-group-item-action">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= article.title %></h5>
                    <small>
                      <% if (article.updated) { %>
                        Updated: <%= new Date(article.updated).toLocaleDateString() %>
                      <% } else if (article.created) { %>
                        Created: <%= new Date(article.created).toLocaleDateString() %>
                      <% } %>
                    </small>
                  </div>
                  <% if (article.excerpt) { %>
                    <p class="mb-1"><%= article.excerpt %></p>
                  <% } %>
                  <% if (article.category) { %>
                    <small class="badge bg-secondary"><%= article.category %></small>
                  <% } %>
                </a>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-info" role="alert">
          <h4 class="alert-heading">No Documentation Found</h4>
          <p>There are currently no documentation articles available.</p>
        </div>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>