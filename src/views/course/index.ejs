<%- include('../partials/header.ejs', { title: 'Course Notes' }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-book"></i> VMware Course Notes</h1>
        <p class="lead">Take notes on VMware course content and track your learning progress.</p>
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Course Days</h5>
            </div>
            <div class="card-body">
                <% if (courseDays && courseDays.length > 0) { %>
                    <div class="row">
                        <% courseDays.forEach(day => { %>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Day <%= day.day %>: <%= day.title %></h5>
                                        <a href="/course/day/<%= day.id %>" class="btn btn-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Content
                                        </a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p>No course content available.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>