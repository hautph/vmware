<%- include('../partials/header.ejs', { title: 'Storage Calculation Results' }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-calculator"></i> Storage Calculation Results</h1>
        
        <div class="card">
            <div class="card-header">
                <h3>Summary</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>VM Specifications</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Number of VMs: <%= results.numVMs %></li>
                            <li class="list-group-item">Average VM Size: <%= results.avgVMSize %> GB</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4>Planning Parameters</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Growth Rate: <%= results.growthRate %>%</li>
                            <li class="list-group-item">Retention Period: <%= results.retentionPeriod %> days</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3>Storage Requirements</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5>Current Storage</h5>
                            <h3><%= results.currentStorage %> GB</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5>Projected Storage</h5>
                            <h3><%= results.projectedStorage %> GB</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5>Backup Storage</h5>
                            <h3><%= results.backupStorage %> GB</h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5>Total Required</h5>
                            <h3><%= results.totalRequired %> GB</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3>Recommendations</h3>
            </div>
            <div class="card-body">
                <ul>
                    <% results.recommendations.forEach(rec => { %>
                        <li><%= rec %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="/calculators/storage" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> New Calculation
            </a>
            <button class="btn btn-secondary" onclick="window.print()">
                <i class="bi bi-printer"></i> Print Results
            </button>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>