<%- include('../partials/header.ejs', { title: t('calculators.vm_consolidation_results.title') }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-calculator"></i> <%= t('calculators.vm_consolidation_results.title') %></h1>
        
        <div class="card">
            <div class="card-header">
                <h3><%= t('calculators.vm_consolidation_results.summary') %></h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4><%= t('calculators.vm_consolidation_results.host_specifications') %></h4>
                        <ul class="list-group">
                            <li class="list-group-item"><%= t('calculators.vm_consolidation_results.physical_cpu_cores') %>: <%= results.physicalCores %></li>
                            <li class="list-group-item"><%= t('calculators.vm_consolidation_results.core_speed') %>: <%= results.coreSpeed %> GHz</li>
                            <li class="list-group-item"><%= t('calculators.vm_consolidation_results.total_memory') %>: <%= results.memoryGB %> <%= t('resources.results.gb') %></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4><%= t('calculators.vm_consolidation_results.vm_specifications') %></h4>
                        <ul class="list-group">
                            <li class="list-group-item"><%= t('calculators.vm_consolidation_results.cpu_cores_per_vm') %>: <%= results.vmCores %></li>
                            <li class="list-group-item"><%= t('calculators.vm_consolidation_results.ram_per_vm') %>: <%= results.vmRamGB %> <%= t('resources.results.gb') %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3><%= t('calculators.vm_consolidation_results.consolidation_calculation') %></h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5><%= t('calculators.vm_consolidation_results.cpu_based') %></h5>
                            <h3><%= results.cpuBasedDensity %> <%= t('resources.results.vms') %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5><%= t('calculators.vm_consolidation_results.memory_based') %></h5>
                            <h3><%= results.memoryBasedDensity %> <%= t('resources.results.vms') %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5><%= t('calculators.vm_consolidation_results.recommended') %></h5>
                            <h3><%= results.recommendedDensity %> <%= t('resources.results.vms') %></h3>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border rounded p-3 text-center">
                            <h5><%= t('calculators.vm_consolidation_results.conservative') %></h5>
                            <h3><%= results.conservativeDensity %> <%= t('resources.results.vms') %></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3><%= t('calculators.vm_consolidation_results.recommendations') %></h3>
            </div>
            <div class="card-body">
                <ul>
                    <% results.recommendations.forEach(rec => { %>
                        <li><%= rec %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="/calculators/vm-density" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> <%= t('calculators.vm_consolidation_results.new_calculation') %>
            </a>
            <button class="btn btn-secondary" onclick="window.print()">
                <i class="bi bi-printer"></i> <%= t('calculators.vm_consolidation_results.print_results') %>
            </button>
            <form method="POST" action="/calculators/vm-density" style="display: inline;" id="exportForm">
                <input type="hidden" name="physicalCores" value="<%= results.physicalCores %>" id="physicalCores">
                <input type="hidden" name="coreSpeed" value="<%= results.coreSpeed %>" id="coreSpeed">
                <input type="hidden" name="memoryGB" value="<%= results.memoryGB %>" id="memoryGB">
                <input type="hidden" name="vmCores" value="<%= results.vmCores %>" id="vmCores">
                <input type="hidden" name="vmRamGB" value="<%= results.vmRamGB %>" id="vmRamGB">
                <input type="hidden" name="conservativeDensity" value="<%= results.conservativeDensity %>" id="conservativeDensity">
                <button type="submit" name="exportFormat" value="pdf" class="btn btn-info">
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button type="submit" name="exportFormat" value="csv" class="btn btn-success">
                    <i class="bi bi-file-spreadsheet"></i> Export to CSV
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    // Save calculation to history
    if (typeof(Storage) !== "undefined") {
        // Get existing history or create new array
        let history = localStorage.getItem('vmDensityHistory');
        history = history ? JSON.parse(history) : [];
        
        // Add current calculation
        history.push({
            timestamp: new Date().toISOString(),
            physicalCores: parseInt(document.getElementById('physicalCores').value),
            coreSpeed: parseFloat(document.getElementById('coreSpeed').value),
            memoryGB: parseInt(document.getElementById('memoryGB').value),
            vmCores: parseInt(document.getElementById('vmCores').value),
            vmRamGB: parseInt(document.getElementById('vmRamGB').value),
            conservativeDensity: parseInt(document.getElementById('conservativeDensity').value)
        });
        
        // Keep only last 10 calculations
        if (history.length > 10) {
            history = history.slice(-10);
        }
        
        // Save back to localStorage
        localStorage.setItem('vmDensityHistory', JSON.stringify(history));
    }
</script>

<%- include('../partials/footer.ejs') %>