<%- include('../partials/header.ejs', { title: t('calculators.vm_consolidation_form.title') }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-server"></i> <%= t('calculators.vm_consolidation_form.title') %></h1>
        <p class="lead"><%= t('calculators.vm_consolidation_form.lead') %></p>
        
        <div class="card">
            <div class="card-header">
                <h3><%= t('calculators.vm_consolidation_form.host_specifications') %></h3>
            </div>
            <div class="card-body">
                <form action="/calculators/vm-density" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="physicalCores" class="form-label"><%= t('calculators.vm_consolidation_form.physical_cpu_cores') %></label>
                                <input type="number" class="form-control" id="physicalCores" name="physicalCores" min="1" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="coreSpeed" class="form-label"><%= t('calculators.vm_consolidation_form.core_speed') %></label>
                                <input type="number" class="form-control" id="coreSpeed" name="coreSpeed" step="0.1" min="0.1" required>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="memoryGB" class="form-label"><%= t('calculators.vm_consolidation_form.total_memory') %></label>
                                <input type="number" class="form-control" id="memoryGB" name="memoryGB" min="1" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="vmCores" class="form-label"><%= t('calculators.vm_consolidation_form.cpu_cores_per_vm') %></label>
                                <input type="number" class="form-control" id="vmCores" name="vmCores" min="1" value="2" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="vmRamGB" class="form-label"><%= t('calculators.vm_consolidation_form.ram_per_vm') %></label>
                                <input type="number" class="form-control" id="vmRamGB" name="vmRamGB" min="1" value="4" required>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-calculator"></i> <%= t('calculators.vm_consolidation_form.calculate_consolidation') %>
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3><%= t('calculators.vm_consolidation_form.best_practices') %></h3>
            </div>
            <div class="card-body">
                <ul>
                    <li><%= t('calculators.vm_consolidation_form.reserve_resources') %></li>
                    <li><%= t('calculators.vm_consolidation_form.consider_contention') %></li>
                    <li><%= t('calculators.vm_consolidation_form.account_overhead') %></li>
                    <li><%= t('calculators.vm_consolidation_form.reserve_maintenance') %></li>
                    <li><%= t('calculators.vm_consolidation_form.monitor_performance') %></li>
                </ul>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3>Calculation History</h3>
            </div>
            <div class="card-body">
                <p>Recent calculations will appear here once you've performed some calculations.</p>
                <ul id="calculationHistory">
                    <!-- History items will be added here dynamically -->
                </ul>
            </div>
        </div>
        
        <script>
            // Simple client-side history storage
            if (typeof(Storage) !== "undefined") {
                // Check if we have stored history
                let history = localStorage.getItem('vmDensityHistory');
                if (history) {
                    history = JSON.parse(history);
                    const historyList = document.getElementById('calculationHistory');
                    historyList.innerHTML = '';
                    
                    // Show last 5 calculations
                    history.slice(-5).forEach(item => {
                        const li = document.createElement('li');
                        li.innerHTML = `Host: ${item.physicalCores} cores @ ${item.coreSpeed}GHz, ${item.memoryGB}GB RAM | 
                                       VM: ${item.vmCores} cores, ${item.vmRamGB}GB RAM | 
                                       Result: ${item.conservativeDensity} VMs`;
                        historyList.appendChild(li);
                    });
                }
            }
        </script>
    </div>
</div>

<%- include('../partials/footer.ejs') %>