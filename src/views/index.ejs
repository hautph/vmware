<%- include('partials/header.ejs') %>

<!-- Hero Section -->
<div class="bg-primary text-white py-5 rounded mb-4">
    <div class="container py-4">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold"><%= t('home.welcome') %></h1>
                <p class="lead mb-4"><%= t('home.description') %></p>
                <div class="d-flex gap-3">
                    <a class="btn btn-light btn-lg" href="/resources" role="button">
                        <i class="bi bi-cpu"></i> <%= t('home.get_started') %>
                    </a>
                    <a class="btn btn-outline-light btn-lg" href="/course" role="button">
                        <i class="bi bi-book"></i> <%= t('navigation.course') %>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block text-center">
                <i class="bi bi-server" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Features -->
<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-primary border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-cpu text-primary fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('navigation.resources') %></h5>
                </div>
                <p class="card-text"><%= t('resources.description') %></p>
                <a href="/resources" class="btn btn-primary"><%= t('resources.calculate') %></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-success border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-calculator text-success fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('navigation.calculators') %></h5>
                </div>
                <p class="card-text"><%= t('calculators.description') %></p>
                <a href="/calculators" class="btn btn-success"><%= t('calculators.title') %></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-info border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-journals text-info fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('navigation.knowledge') %></h5>
                </div>
                <p class="card-text"><%= t('knowledge.description') %></p>
                <a href="/knowledge" class="btn btn-info"><%= t('navigation.knowledge') %></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-warning border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-book text-warning fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('navigation.glossary') %></h5>
                </div>
                <p class="card-text"><%= t('glossary.description') %></p>
                <a href="/glossary" class="btn btn-warning"><%= t('navigation.glossary') %></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-secondary border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-mortarboard text-secondary fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('navigation.course') %></h5>
                </div>
                <p class="card-text"><%= t('course.description') %></p>
                <a href="/course" class="btn btn-secondary"><%= t('navigation.course') %></a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-danger border-2">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-tools text-danger fs-1 me-3"></i>
                    <h5 class="card-title mb-0"><%= t('calculators.planned_calculators') %></h5>
                </div>
                <p class="card-text"><%= t('calculators.coming_soon') %></p>
                <a href="#" class="btn btn-danger disabled"><%= t('calculators.coming_soon') %></a>
            </div>
        </div>
    </div>
</div>

<!-- Key Benefits -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body">
                <h3 class="card-title text-center mb-4"><%= t('home.title') %></h3>
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <i class="bi bi-lightning-charge-fill text-primary fs-1"></i>
                        <h5><%= t('calculators.vm_density') %></h5>
                        <p class="text-muted"><%= t('resources.calculate') %></p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <i class="bi bi-shield-lock-fill text-success fs-1"></i>
                        <h5><%= t('glossary.categories.Security') %></h5>
                        <p class="text-muted"><%= t('glossary.categories.Security') %></p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <i class="bi bi-globe-americas text-info fs-1"></i>
                        <h5><%= t('language.vi') %></h5>
                        <p class="text-muted"><%= t('language.en') %> <%= t('language.vi') %></p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <i class="bi bi-cloud-arrow-up-fill text-warning fs-1"></i>
                        <h5><%= t('glossary.categories.Cloud_Technologies') %></h5>
                        <p class="text-muted"><%= t('glossary.categories.Cloud_Technologies') %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Updates -->
<div class="row mb-5">
    <div class="col-12">
        <h3 class="mb-4"><%= t('knowledge.title') %></h3>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">VMware vSphere 8 Features</h5>
                        <p class="card-text"><%= t('glossary.categories.Cloud_Technologies') %></p>
                        <a href="/knowledge/article/vsphere-8-vs-vsphere-7-whats-new" class="btn btn-outline-primary btn-sm"><%= t('glossary.learn_more') %></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">vSAN 8 ESA Deep Dive</h5>
                        <p class="card-text"><%= t('glossary.categories.Storage') %></p>
                        <a href="/knowledge/article/vsan-8-esa-deep-dive" class="btn btn-outline-primary btn-sm"><%= t('glossary.learn_more') %></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><%= t('glossary.categories.Security') %></h5>
                        <p class="card-text"><%= t('glossary.categories.Security') %></p>
                        <a href="/knowledge/article/vsphere-security-hardening-best-practices" class="btn btn-outline-primary btn-sm"><%= t('glossary.learn_more') %></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card bg-primary text-white">
            <div class="card-body text-center py-5">
                <h3 class="card-title"><%= t('home.welcome') %></h3>
                <p class="card-text lead"><%= t('home.description') %></p>
                <a href="/resources" class="btn btn-light btn-lg">
                    <i class="bi bi-rocket-takeoff"></i> <%= t('home.get_started') %>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>