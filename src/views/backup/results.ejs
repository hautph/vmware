<%- include('../partials/header.ejs', { title: t('calculators.backup_results.title') }) %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h2 class="mb-0"><i class="bi bi-calculator"></i> <%= t('calculators.backup_results.title') %></h2>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h4><%= t('calculators.backup_results.backup_configuration') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.backup_results.data_size') %>:</strong></td>
                  <td><%= results.dataSizeGB %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.network_speed') %>:</strong></td>
                  <td><%= results.networkSpeedMbps %> Mbps</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.storage_type') %>:</strong></td>
                  <td><%= results.storageType %></td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.compression_ratio') %>:</strong></td>
                  <td><%= results.compressionRatio %>x</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.deduplication_ratio') %>:</strong></td>
                  <td><%= results.deduplicationRatio %>x</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.backup_window') %>:</strong></td>
                  <td><%= results.backupWindowHours %> <%= t('calculators.backup_results.hours') %></td>
                </tr>
              </table>
            </div>
            
            <div class="col-md-6">
              <h4><%= t('calculators.backup_results.effective_data') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.backup_results.raw_data_size') %>:</strong></td>
                  <td><%= results.dataSizeGB %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.effective_data_size') %>:</strong></td>
                  <td><%= results.effectiveDataSizeGB %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.data_reduction') %>:</strong></td>
                  <td><%= (results.dataSizeGB - results.effectiveDataSizeGB).toFixed(2) %> GB</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.daily_change_rate') %>:</strong></td>
                  <td><%= results.dailyChangeRate %>%</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.incremental_data') %>:</strong></td>
                  <td><%= results.incrementalDataEffectiveGB %> GB</td>
                </tr>
              </table>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-md-6">
              <h4><%= t('calculators.backup_results.performance_analysis') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.backup_results.network_throughput') %>:</strong></td>
                  <td><%= results.networkThroughputMBps %> MB/s</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.effective_network_throughput') %>:</strong></td>
                  <td><%= results.effectiveNetworkThroughputMBps %> MB/s</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.storage_throughput') %>:</strong></td>
                  <td><%= results.storageThroughputMBps %> MB/s</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.effective_storage_throughput') %>:</strong></td>
                  <td><%= results.effectiveStorageThroughputMBps %> MB/s</td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.bottleneck_throughput') %>:</strong></td>
                  <td><%= results.bottleneckThroughputMBps %> MB/s</td>
                </tr>
              </table>
            </div>
            
            <div class="col-md-6">
              <h4><%= t('calculators.backup_results.time_estimates') %></h4>
              <table class="table table-striped">
                <tr>
                  <td><strong><%= t('calculators.backup_results.full_backup_time') %>:</strong></td>
                  <td><%= results.backupTimeHours %> <%= t('calculators.backup_results.hours') %></td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.restore_time') %>:</strong></td>
                  <td><%= results.restoreTimeHours %> <%= t('calculators.backup_results.hours') %></td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.incremental_backup_time') %>:</strong></td>
                  <td><%= results.incrementalTimeHours %> <%= t('calculators.backup_results.hours') %></td>
                </tr>
                <tr>
                  <td><strong><%= t('calculators.backup_results.required_throughput') %>:</strong></td>
                  <td><%= results.requiredThroughputMBps %> MB/s</td>
                </tr>
              </table>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-12">
              <h4><%= t('calculators.backup_results.recommendations') %></h4>
              <ul class="list-group">
                <% results.recommendations.forEach(rec => { %>
                  <li class="list-group-item"><%= rec %></li>
                <% }); %>
              </ul>
            </div>
          </div>
          
          <div class="row mt-4">
            <div class="col-12">
              <a href="/backup" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> <%= t('calculators.backup_results.new_calculation') %>
              </a>
              <a href="/calculators" class="btn btn-secondary">
                <i class="bi bi-calculator"></i> <%= t('calculators.title') %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>