<%- include('../partials/header.ejs', { title: 'Knowledge Base Search Results' }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-search"></i> Knowledge Base Search Results</h1>
        <p class="lead">Results for "<%= query %>"</p>
        
        <div class="mb-3">
            <a href="/knowledge" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Knowledge Base
            </a>
        </div>
        
        <% if (results.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                <h4>No results found</h4>
                <p>No articles matched your search query. Try different keywords.</p>
            </div>
        <% } else { %>
            <div class="row">
                <% results.forEach(article => { %>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= article.title %></h5>
                                <h6 class="card-subtitle mb-2 text-muted"><%= article.category %></h6>
                                <div class="card-text"><%= article.excerptHtml %></div>
                                <a href="/knowledge/article/<%= article.id %>" class="btn btn-primary btn-sm">
                                    Read Article
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>