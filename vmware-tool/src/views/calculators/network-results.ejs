<%- include('../partials/header.ejs', { title: 'Network Bandwidth Results' }) %>

<div class="row">
    <div class="col-12">
        <h1><i class="bi bi-calculator"></i> Network Bandwidth Results</h1>
        
        <div class="card">
            <div class="card-header">
                <h3>Summary</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>VM Specifications</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Number of VMs: <%= results.numVMs %></li>
                            <li class="list-group-item">Average Bandwidth per VM: <%= results.avgBandwidth %> Mbps</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4>Planning Parameters</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Peak Usage Multiplier: <%= results.peakMultiplier %>x</li>
                            <li class="list-group-item">Redundancy: <%= results.redundancy === 'yes' ? 'Yes' : 'No' %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3>Bandwidth Requirements</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <h5>Average Total</h5>
                            <h3><%= results.averageTotal %> Mbps</h3>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <h5>Peak Total</h5>
                            <h3><%= results.peakTotal %> Mbps</h3>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3 text-center">
                            <h5>With Redundancy</h5>
                            <h3><%= results.redundantBandwidth %> Mbps</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-header">
                <h3>Recommendations</h3>
            </div>
            <div class="card-body">
                <ul>
                    <% results.recommendations.forEach(rec => { %>
                        <li><%= rec %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="/calculators/network" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> New Calculation
            </a>
            <button class="btn btn-secondary" onclick="window.print()">
                <i class="bi bi-printer"></i> Print Results
            </button>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>